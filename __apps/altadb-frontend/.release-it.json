{
	"plugins": {
		"@release-it/conventional-changelog": {
			"path": ".",
			"infile": "CHANGELOG.md",
			"preset": "conventionalcommits",
			"gitRawCommitsOpts": {
				"path": "."
			}
		}
	},
	"git": {
		"push": true,
		"tagName": "${process.env.npm_package_name}-v${version}",
		"commitsPath": ".",
		"commitMessage": "feat(${process.env.npm_package_name.split('/')[1]}): released versions v${version} [no ci]",
		"requireCommits": true,
		"requireCommitsFail": false,
		"requireCleanWorkingDir": false,
		"changelog": ""
	},
	"npm": {
		"publish": false,
		"versionArgs": ["--workspaces false"]
	},
	"github": {
		"release": true,
		"releaseName": "${process.env.npm_package_name}-v${version}"
	},
	"hooks": {
		"before:init": ["git update-index -q --refresh"],
		"before:git:release": ["git add --all"]
	}
}
