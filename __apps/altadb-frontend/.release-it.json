{
	"plugins": {},
	"git": {
		"push": true,
		"tagName": "${process.env.npm_package_name}-v${version}",
		"commitsPath": ".",
		"commitMessage": "front - :zap: released versions v${version} [no ci]",
		"requireCommits": true,
		"requireCommitsFail": false,
		"requireCleanWorkingDir": false,
		"changelog": "npx auto-changelog --stdout --commit-limit false -u --breaking-pattern BREAKING CHANGE:feat --template ./changelog-compact-commit-list.hbs "
	},
	"npm": {
		"publish": false,
		"versionArgs": ["--workspaces false"]
	},
	"github": {
		"release": true,
		"releaseName": "${process.env.npm_package_name}-v${version}"
	},
	"hooks": {
		"before:init": ["git update-index -q --refresh"],
		"before:git:release": ["git add --all"]
	}
}
